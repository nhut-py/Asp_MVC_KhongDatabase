<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>@ViewBag.Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/font/css/font-awesome.min.css">
</head>
<body>

    <!-- navar1 -->
    <section>
        <div class="row" style="background-color: rgb(217, 224, 243);">
            <div class="col-lg-2" style="height: 40px; padding-top: 6px; text-align: center;">
                <a class="text-dark px-2" href=""><i class="fa fa-facebook"></i></a>
                <a class="text-dark px-2" href=""><i class="fa fa-github"></i></a>
                <a class="text-dark px-2" href=""><i class="fa fa-envelope"></i></a>
                <a class="text-dark px-2" href=""><i class="fa fa-instagram"></i></a>
            </div>
            <div class="col-lg-8" style="text-align: center;">
                <input class="navar-input" placeholder="Tìm kiếm">
                <a><i class="fa fa-search" style="font-size: 18px; color: #df8da2;"></i></a>
            </div>
            <div class="col-lg-2 navar-cart">
                <div class="navar-button">
                    <a href="" class="text-dark">
                        <i class="fa fa-shopping-cart" aria-hidden="true"
                           style="color: #df8da2;"></i>
                    </a>
                    <span class="navar-font">0</span>
                </div>
                <div class="navar-button">
                    <a><i class="fa fa-user-circle-o" aria-hidden="true" style="color: #df8da2;"></i></a>
                </div>
            </div>
        </div>
    </section>
    <!-- navar2 -->
    <section>
        <div class="row">
            <ul id="nav">
                <li id="nav-1"><img src="~/Content/css/logo.svg" alt="logo" height="105%"></li>
                <li id="nav-2"><a href="http://www.free-css.com/" class="nav-a">Trang chủ</a></li>
                <li id="nav-3"><a href="http://www.free-css.com/" class="nav-a">Sản phẩm</a></li>
                <li>
                    <div class="dropdown">
                        <button class="dropbtn"><i class="fa fa-bars" aria-hidden="true"></i></button>
                        <div class="dropdown-content">
                            <a href="~/Views/Home/TrangChu.cshtml">Trang chủ</a>
                            <a href="~/Views/Home/sanPham.cshtml">Sản phẩm</a>
                            <a href="#">Thông tin</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        @*<span>@ViewBag.Title</span>*@
    </section>
    <section>
        <div class="container bodys" style="min-height:500px">
            @RenderBody()

        </div>
        @*@{ 
            List<string> ds = (List<string>)ViewBag.Danhsach;
            for(int i= 0; i < ds.Count; i++)
            {
                <span>@ds[i]</span>
            }
        }*@
    </section>
    <!-- -------------------------------Chân trang -->
    <section>
        <div class="fots">
            <div class="row">
                <div class="col-lg-3">
                    <div class="container">
                        <p style="text-align: center;"><img src="~/Content/css/logo.svg" alt="logo" height="105%"></p>
                        <p style="text-align: justify; font-size: 18px;">
                            &nbsp;&nbsp;<b>Shop Chú Lùn</b> chuyên bán quần, áo, sản phẩm giày dép phù hợp với con em bạn,
                            chúng tôi nhập sản phẩm ở những hãng mai uy tín và chất lượng.
                        </p>
                        <p><i class="fa fa-map-marker" aria-hidden="true"></i> Hiếu Tử -Tiểu Cần -Trà Vinh</p>
                        <p><i class="fa fa-envelope" aria-hidden="true"></i> nhutnhut.pip@gmail.com</p>
                        <p><i class="fa fa-phone-square" aria-hidden="true"></i> 012345678</p>
                    </div>
                </div>
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">
                </div>
            </div>
            <p style="text-align: center;">Bảng quyền thuộc &reg; <a href="https://github.com/nhut-py/">nhut-py</a></p>
        </div>
        <a href="#" class=" back-to-top" style="display: inline; text-align: center;">
            <i class="fa fa-angle-double-up" style="font-weight: bold; font-size: 35px;"></i>
        </a>
    </section>
    @RenderSection("script",false)
</body>
</html>